{
    "restartable": "rs",
    "legacyWatch": true,
    "verbose": true,
    "ignore": ["node_modules", ".next"],
    "watch": ["src/server"], 
    "delay": 3000,
    "ext": "ts",
    "env": {
        "NODE_ENV": "development"
    },
    "exec": "ts-node --project tsconfig.server.json src/server/index.ts"
}
